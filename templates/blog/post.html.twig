{% extends 'base.html.twig' %}
{% block title %}{{post.title}}{% endblock %}

{% block body %}

        <p>ID {{ id }}</p>
        <h3>{{ post.title }}</h3>
        <p>{{ post.text }}</p>  here is a current locale {{ locale}}
        <p>
        {{ message }}
        </p>
        <p>Env: {{ app.environment }}</p>
        <p>User: {{ app.user }}</p>
        <p>Request: {{ app.request }}</p>
        <p>Session: {{ app.session.started }}</p>
        <p>Debug: {{ app.debug }}</p>
{% endblock body %}
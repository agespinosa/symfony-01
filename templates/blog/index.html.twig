{% extends 'base.html.twig' %}
{% block title %}Blog!{% endblock %}

{% block body %}
    {% for id, post in posts %}
        <p><a href="{{ path('blog_show', {'id':id}) }}">ID {{ id }}</a> </p>
        <h3>{{ post.title | upper }}</h3>
        <p>{{ post.text }}</p>
        <p>{{ post.date|date('H:i:s')}}</p>
        <p>{{ 56000000 | price }}</p>
    {% endfor %}
{% endblock body %}